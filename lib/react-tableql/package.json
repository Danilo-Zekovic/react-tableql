{
  "name": "react-tableql",
  "version": "0.2.1",
  "description": "React component for generating tables and data grids",
  "main": "build/index.js",
  "typings": "build/src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Danilo-Zekovic/react-tableql"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "javascript",
    "data",
    "graphql",
    "table",
    "grid",
    "react-tableql",
    "apollo",
    "datagrid",
    "client"
  ],
  "author": {
    "name": "Danilo Zekovic",
    "url": "https://github.com/Danilo-Zekovic"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "webpack --watch",
    "build": "webpack",
    "dockerDev": "echo \"-- Starting react-tableql --\" && pm2 --name react-tableql start yarn --interpreter sh -- start"
  },
  "peerDependencies": {
    "@apollo/client": "^3.0.0",
    "graphql": "^15.0.0",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@apollo/client": "^3.7.3",
    "@babel/core": "^7.20.7",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/plugin-transform-react-jsx": "^7.20.7",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "7.18.6",
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "29.2.4",
    "@types/node": "^18.11.17",
    "@types/react": "^18.0.25",
    "apollo-cache-inmemory": "^1.6.6",
    "babel-jest": "29.3.1",
    "babel-loader": "^9.1.0",
    "core-js": "^3.26.1",
    "css-loader": "^6.7.3",
    "fork-ts-checker-webpack-plugin": "^7.2.14",
    "graphql": "^16.6.0",
    "graphql-tools": "^8.3.14",
    "jest": "^29.3.1",
    "jest-css-modules-transform": "4.4.2",
    "jest-environment-jsdom": "^29.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "style-loader": "^3.3.1",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.4",
    "typescript-plugin-css-modules": "3.4.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-node-externals": "^3.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "testMatch": [
      "**/?(*.)+(test).ts?(x)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 90,
        "branches": 90,
        "functions": 90,
        "lines": 90
      }
    }
  }
}
