{
  "exclude": ["node_modules", "build/**/*"],
  "compilerOptions": {
    "outDir": "build",
    "rootDir": ".",
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "lib": ["es6", "dom"],
    "jsx": "react",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  }
}
